{
  "name": "evgenia-portnov-website",
  "version": "1.0.0",
  "description": "Evgenia Portnov's Art Website",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "convert-webp": "node scripts/webp-converter.js",
    "// === BUILD COMMANDS ===": "",
    "build:dev": "webpack --mode development && npm run update-bundles",
    "build:prod": "npm run build:clean && webpack --mode production && npm run sitemap:generate",
    "build:clean": "node scripts/pre-build-quality.js",
    "build:analyze": "webpack --mode production --env analyze",
    "// === RUN COMMANDS ===": "",
    "run:dev": "npm run build:dev && NODE_ENV=development nodemon server.js",
    "run:prod": "npm run build:prod && NODE_ENV=production node server.js",
    "run-pm2:dev": "npm run build:dev && npx pm2 start ecosystem.config.js --env development",
    "run-pm2:prod": "npm run build:prod && npx pm2 start ecosystem.config.js --env production",
    "// === WATCH COMMANDS ===": "",
    "watch:prod": "webpack --mode production --watch",
    "watch-pm2:prod": "npx pm2 restart evgenia-art --watch",
    "// === START COMMANDS ===": "",
    "start:dev": "NODE_ENV=development node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start-pm2:dev": "npx pm2 start ecosystem.config.js --env development",
    "start-pm2:prod": "npx pm2 start ecosystem.config.js --env production",
    "// === SETUP COMMANDS ===": "",
    "setup": "node scripts/setup.js",
    "setup:quick": "npm install && npm run build:dev",
    "// === DEPLOYMENT COMMANDS ===": "",
    "pm2:stop": "npx pm2 stop evgenia-art",
    "pm2:restart": "npx pm2 restart evgenia-art",
    "pm2:watch": "npx pm2 restart evgenia-art --watch",
    "pm2:logs": "npx pm2 logs evgenia-art",
    "pm2:status": "npx pm2 status",
    "setup:dirs": "mkdir -p logs pids sessions",
    "// === UTILITY COMMANDS ===": "",
    "update-bundles": "node scripts/update-html-bundles.js",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "sitemap:validate": "node scripts/generate-sitemap.js --validate",
    "sitemap:stats": "node scripts/generate-sitemap.js --stats",
    "sitemap:robots": "node scripts/generate-sitemap.js --robots",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "csrf": "^3.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-timeout-handler": "^2.2.2",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "session-file-store": "^1.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.31.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "babel-loader": "^10.0.0",
    "chalk": "^5.4.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1"
  }
}
