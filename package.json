{
  "name": "evgenia-portnov-website",
  "version": "1.0.0",
  "description": "Evgenia Portnov's Art Website",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "convert-webp": "node scripts/utilities/webp-converter.js",
    "// === BUILD COMMANDS ===": "",
    "build:dev": "webpack --mode development && npm run update-bundles",
    "build:prod": "npm run build:clean && webpack --mode production && npm run sitemap:generate",
    "build:clean": "node scripts/utilities/pre-build-quality.js",
    "build:analyze": "webpack --mode production --env analyze",
    "// === RUN COMMANDS ===": "",
    "run:dev": "npm run build:dev && NODE_ENV=development nodemon server.js",
    "run:prod": "npm run build:prod && NODE_ENV=production node server.js",
    "run-systemd:dev": "npm run systemd:dev",
    "run-systemd:prod": "npm run systemd:prod",
    "// === WATCH COMMANDS ===": "",
    "watch:prod": "webpack --mode production --watch",
    "// === START COMMANDS ===": "",
    "start:dev": "NODE_ENV=development node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:prod-localhost": "NODE_ENV=production LOCALHOST_TESTING=true node server.js",
    "// === SETUP COMMANDS ===": "",
    "setup": "node scripts/utilities/setup.js",
    "setup:quick": "npm install && npm run build:dev",
    "deploy": "./scripts/deploy.sh",
    "// === DEPLOYMENT COMMANDS ===": "",
    "// === SYSTEMD COMMANDS (Secure) ===": "",
    "systemd:dev": "npm run build:dev && ./scripts/deploy-systemd.sh",
    "systemd:prod": "./scripts/production-setup.sh",
    "systemd:status": "sudo systemctl status evgenia-art",
    "systemd:logs": "sudo journalctl -u evgenia-art -f",
    "systemd:logs:recent": "sudo journalctl -u evgenia-art --since '1 hour ago'",
    "systemd:logs:ips": "sudo journalctl -u evgenia-art | grep -oE '\"ip\":\"[^\"]*\"' | sort | uniq",
    "systemd:logs:requests": "sudo journalctl -u evgenia-art | grep -E '(GET|POST|PUT|DELETE)' | tail -20",
    "systemd:logs:errors": "sudo journalctl -u evgenia-art | grep -E '(error|warn|fail)' -i | tail -20",
    "systemd:start": "sudo systemctl start evgenia-art",
    "systemd:stop": "sudo systemctl stop evgenia-art",
    "systemd:restart": "sudo systemctl restart evgenia-art",
    "// === NGINX & SSL DEPLOYMENT ===": "",
    "deploy:nginx": "sudo ./scripts/deployment/configure-nginx.sh",
    "deploy:update": "sudo ./scripts/deployment/update-deployment.sh",
    "deploy:update:main": "sudo ./scripts/deployment/update-deployment.sh main",
    "deploy:update:dev": "sudo ./scripts/deployment/update-deployment.sh develop",
    "setup:dirs": "mkdir -p logs pids sessions",
    "// === UTILITY COMMANDS ===": "",
    "update-bundles": "node scripts/build-tools/update-html-bundles.js",
    "sitemap:generate": "node scripts/utilities/generate-sitemap.js",
    "sitemap:validate": "node scripts/utilities/generate-sitemap.js --validate",
    "sitemap:stats": "node scripts/utilities/generate-sitemap.js --stats",
    "sitemap:robots": "node scripts/utilities/generate-sitemap.js --robots",
    "// === CSS OPTIMIZATION COMMANDS ===": "",
    "css:optimize": "node scripts/css-optimization/purge-unused-css.js",
    "css:restore": "node scripts/css-optimization/restore-css.js",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "eslint . --fix --config eslint.config.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// === DATABASE COMMANDS ===": "",
    "db:test": "node src/scripts/testDatabase.js",
    "db:init": "node src/scripts/initDatabase.js",
    "db:migrate": "node src/scripts/migrateArtworkData.js",
    "db:reset": "node src/scripts/initDatabase.js --force && node src/scripts/migrateArtworkData.js",
    "db:setup": "npm run db:init && npm run db:migrate"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "csrf": "^3.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-timeout-handler": "^2.2.2",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "session-file-store": "^1.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.31.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "babel-loader": "^10.0.0",
    "chalk": "^5.4.1",
    "critical": "^7.2.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "purgecss": "^7.0.2",
    "purgecss-webpack-plugin": "^7.0.2",
    "sharp": "^0.34.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1"
  }
}
