{
  "name": "evgenia-portnov-website",
  "version": "1.0.0",
  "description": "Evgenia Portnov's Art Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "convert-webp": "node webp-converter.js",
    "// === DEVELOPMENT COMMANDS ===": "",
    "dev": "npm run dev:build && npm run dev:server",
    "dev:build": "webpack --mode development && npm run update-bundles",
    "dev:server": "NODE_ENV=development nodemon server.js",
    "dev:watch": "webpack --mode development --watch",
    "// === PRODUCTION COMMANDS ===": "",
    "build": "npm run build:clean && webpack --mode production && npm run sitemap:generate",
    "build:clean": "node scripts/pre-build-quality.js",
    "build:quick": "webpack --mode production",
    "build:analyze": "webpack --mode production --env analyze",
    "build:full": "npm run build && npm run update-bundles",
    "prod:start": "npm run build && npm run start:prod",
    "// === SETUP COMMANDS ===": "",
    "setup": "node setup.js",
    "setup:quick": "npm install && npm run dev:build",
    
    "// === DEPLOYMENT COMMANDS ===": "",
    "pm2:start": "npx pm2 start ecosystem.config.js --env production",
    "pm2:stop": "npx pm2 stop evgenia-art",
    "pm2:restart": "npx pm2 restart evgenia-art",
    "pm2:logs": "npx pm2 logs evgenia-art",
    "pm2:status": "npx pm2 status",
    "setup:dirs": "mkdir -p logs pids sessions",
    "// === UTILITY COMMANDS ===": "",
    "update-bundles": "node scripts/update-html-bundles.js",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "sitemap:validate": "node scripts/generate-sitemap.js --validate",
    "sitemap:stats": "node scripts/generate-sitemap.js --stats",
    "sitemap:robots": "node scripts/generate-sitemap.js --robots",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "csrf": "^3.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-timeout-handler": "^2.2.2",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "session-file-store": "^1.5.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.31.0",
    "babel-loader": "^10.0.0",
    "chalk": "^5.4.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1"
  }
}
